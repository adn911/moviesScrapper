ls -l movies | grep "^d" | awk '{total=""; for (i=9;i<=NF;i++) total=total" "$i;  print total; }' | awk -F '\[|\(' '{print $1;}' | awk -F '[a-zA-Z]*[Rr][Ii][Pp]' '{print $1;}' | awk -F '[0-9]+p|DVD|dvd|BluRay' '{print $1;}' |  sed -e 's/\.//g' -e 's/-//g' -e 's/ //g' -e 's/\(.*\)[0-9][0-9][0-9][0-9]/\1/g' -e 's/extended.*//Ig' -e 's/proper.*//Ig' -e 's/trilogy.*//Ig' -e 's/franchise.*//Ig' -e 's/remastered.*//Ig' -e 's/[a-z]HD.*//g' -e 's/criterion//Ig'
